<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dialog_content_padding"
    android:paddingStart="@dimen/dialog_content_padding"
    android:paddingRight="@dimen/dialog_content_padding"
    android:paddingEnd="@dimen/dialog_content_padding">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline_component_unit"
        android:singleLine="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/typography_subhead"
        android:textStyle="bold"
        android:text="@string/catalogue_filter_title_genres"
        android:id="@+id/catalogueFilterGenreTextView"/>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:verticalSpacing="@dimen/baseline_grid_unit"
        android:horizontalSpacing="@dimen/baseline_grid_unit"
        android:columnWidth="@dimen/grid_item_width"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:choiceMode="multipleChoice"
        android:listSelector="@drawable/selected_item_background"
        android:id="@+id/catalogueFilterGenreGridView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline_component_unit"
        android:singleLine="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/typography_subhead"
        android:textStyle="bold"
        android:text="@string/catalogue_filter_title_status" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline_component_unit"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/baseline_component_unit"
            android:layout_marginEnd="@dimen/baseline_component_unit"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/typography_button"
            android:text="@string/catalogue_filter_radio_option_all"
            android:id="@+id/catalogueFilterAllRadioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/baseline_component_unit"
            android:layout_marginEnd="@dimen/baseline_component_unit"
            android:textColor="@color/secondaryText"
            android:text="@string/catalogue_filter_radio_option_completed"
            android:textSize="@dimen/typography_button"
            android:id="@+id/catalogueFilterCompletedRadioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/baseline_component_unit"
            android:layout_marginEnd="@dimen/baseline_component_unit"
            android:textColor="@color/secondaryText"
            android:text="@string/catalogue_filter_radio_option_ongoing"
            android:textSize="@dimen/typography_button"
            android:id="@+id/catalogueFilterOngoingRadioButton" />

    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/baseline_component_unit"
        android:singleLine="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="@dimen/typography_subhead"
        android:textStyle="bold"
        android:text="@string/catalogue_filter_title_order_by" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/baseline_component_unit"
            android:layout_marginEnd="@dimen/baseline_component_unit"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/typography_button"
            android:text="@string/catalogue_filter_radio_option_name"
            android:id="@+id/catalogueFilterNameRadioButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/baseline_component_unit"
            android:layout_marginEnd="@dimen/baseline_component_unit"
            android:textColor="@color/secondaryText"
            android:textSize="@dimen/typography_button"
            android:text="@string/catalogue_filter_radio_option_rank"
            android:id="@+id/catalogueFilterRankRadioButton" />

    </RadioGroup>

</LinearLayout>