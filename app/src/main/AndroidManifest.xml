<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.jparkie.aizoban">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.jparkie.aizoban.AizobanApplication"
        android:allowBackup="true"
        android:largeHeap="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/AizobanTheme">

        <activity
            android:name="com.jparkie.aizoban.views.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.jparkie.aizoban.views.activities.MangaActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.jparkie.aizoban.views.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.MainActivity" />
        </activity>

        <service
            android:name="com.jparkie.aizoban.data.downloads.DownloadService"
            android:exported="false"
            android:label="@string/service_name"
            android:icon="@drawable/ic_logo">
        </service>

    </application>

</manifest>
